<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active">Services</li>
  </ol>
</nav>
<h3>Services</h3>
<ul class="list-group">
    {{#each services}}
    <li class="list-group-item">
        <a href="/sessions?sid={{this.sid}}">{{this.uniqueName}}</a>
        <button data-serviceSid="{{this.sid}}" id="delService{{@index}}" class="btn btn-danger float-right">Delete</button>
    </li>
    {{/each}}
</ul>
<br>
<div class="cr-service">
    <!-- Button HTML (to Trigger Modal) -->
    <a href="#modalService" role="button" class="btn btn-lg btn-primary" data-toggle="modal">Quick Create</a>

    <!-- Modal HTML -->
    <div id="modalService" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Service</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <span class="mr-2">Name:</span><input id="uniqueName" type="text"></input>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button data-serviceName="{{serviceSid}}" id="createService" type="button" class="btn btn-primary">Submit</button>
                </div>
                <div id="modal-error" class="mx-4 alert alert-danger" role="alert" style="display:none">
                    <span id="errorMsg"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let i = 0;
    let id = `delService${i}`;
    while(document.getElementById(id) !== null)
    {
        let element = document.getElementById(id);
        element.addEventListener('click', () => {
            $.ajax({
                url: `/serviceDelete?serviceSid=${element.attributes["data-serviceSid"].value}`,
                type: 'POST',
            }).done((data) => {
                location.reload(); //Implement partial refresh for production code, but for ease of demo, just reload the page
                //setTimeout(location.reload.bind(location), 8000);
            }).fail((xhr, status, error) => {
                $('#modal-error').show();
                $('#errorMsg').text(xhr.responseText);
            });
        });
        i++;
        id = `delService${i}`;
    }

    let element2 = document.getElementById('createService');
    let uniqueName = document.getElementById('uniqueName');
    element2.addEventListener('click', () => {
        //Need to update this to be a POST and to use AXIOS
        $.ajax({
            url: `/createService?uniqueName=${uniqueName.value}`,
            type: 'POST',
        }).done((data) => {
            location.reload(); //Implement partial refresh for production code, but for ease of demo, just reload the page
            //setTimeout(location.reload.bind(location), 8000);
        }).fail((xhr, status, error) => {
            $('#modal-error').show();
            $('#errorMsg').text(xhr.responseText);
        });
    });
</script>


